<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MatchDisplayActivity"
    tools:showIn="@layout/app_match_bar_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/OuterLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13"
        tools:context=".MatchDisplayActivity">

        <View
            android:id="@+id/rightSiderRuleInstanceTagDivider2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomRuleInstanceTagDivider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ruleInstanceTag2"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2" />

        <View
            android:id="@+id/leftSiderRuleInstanceTagDivider2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomRuleInstanceTagDivider2"
            app:layout_constraintEnd_toStartOf="@+id/ruleInstanceTag2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2" />

        <View
            android:id="@+id/bottomRuleInstanceTagDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSiderRuleInstanceTagDivider2"
            app:layout_constraintTop_toBottomOf="@+id/ruleInstanceTag2" />

        <TextView
            android:id="@+id/ruleInstanceTag2"
            android:layout_width="180dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/RuleAppliedTag"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unificationSymbol3" />

        <ScrollView
            android:id="@+id/RightSideTerm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/unificationSymbol3"
            app:layout_constraintTop_toTopOf="@+id/unificationSymbol3">

            <LinearLayout
                android:id="@+id/RightSideTermLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" />
        </ScrollView>

        <ScrollView
            android:id="@+id/LeftSideTerm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toStartOf="@+id/unificationSymbol3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/unificationSymbol3">

            <LinearLayout
                android:id="@+id/LeftSideTermLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" />
        </ScrollView>

        <ImageView
            android:id="@+id/unificationSymbol3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toStartOf="@+id/RightSideTerm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/LeftSideTerm"
            app:layout_constraintTop_toBottomOf="@+id/problemTag3"
            app:srcCompat="@drawable/unieqhdpi" />

        <HorizontalScrollView
            android:id="@+id/VariableDisplayScroll"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/VarTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:freezesText="true"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="34sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/SubTermScrollView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SubTermTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:freezesText="true"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="34dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/leftSideProblemTagDivider3"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomProblemTagDivider3"
            app:layout_constraintEnd_toStartOf="@+id/problemTag3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/RightSideProblemTagDivider"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/bottomProblemTagDivider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/problemTag3"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/bottomProblemTagDivider3"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSideProblemTagDivider3"
            app:layout_constraintTop_toBottomOf="@+id/problemTag3" />

        <TextView
            android:id="@+id/problemTag3"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/UnifyTag"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/problemTag3"
            app:layout_constraintEnd_toEndOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSideProblemTagDivider3" />

        <View
            android:id="@+id/bottomProblemTagDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSiderRuleInstanceTagDivider2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/SubTermScrollView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/VariableDisplayScroll"
            app:layout_constraintTop_toBottomOf="@+id/ruleInstanceTag2"
            app:srcCompat="@drawable/equal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:maxWidth="200dp">

        <include layout="@layout/drawer_menu_layout" />
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TermConstructActivity"
    tools:showIn="@layout/app_term_bar_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/OuterLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MatchDisplayActivity">

        <View
            android:id="@+id/rightSiderRuleInstanceTagDivider2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomRuleInstanceTagDivider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ruleInstanceTag2"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2" />

        <View
            android:id="@+id/leftSiderRuleInstanceTagDivider2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomRuleInstanceTagDivider2"
            app:layout_constraintEnd_toStartOf="@+id/ruleInstanceTag2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2" />

        <View
            android:id="@+id/bottomRuleInstanceTagDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSiderRuleInstanceTagDivider2"
            app:layout_constraintTop_toBottomOf="@+id/ruleInstanceTag2" />

        <TextView
            android:id="@+id/ruleInstanceTag2"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:text="@string/CurrentTermConstructionTag"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/TermInstanceDisplay"
            app:layout_constraintEnd_toStartOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftSiderRuleInstanceTagDivider2"
            app:layout_constraintTop_toBottomOf="@+id/unificationSymbol3" />

        <ScrollView
            android:id="@+id/RightSideTerm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/unificationSymbol3"
            app:layout_constraintTop_toTopOf="@+id/unificationSymbol3">

            <LinearLayout
                android:id="@+id/RightSideTermLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" />
        </ScrollView>

        <ScrollView
            android:id="@+id/LeftSideTerm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toStartOf="@+id/unificationSymbol3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/unificationSymbol3">

            <LinearLayout
                android:id="@+id/LeftSideTermLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" />
        </ScrollView>

        <ImageView
            android:id="@+id/unificationSymbol3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:layout_constraintBottom_toTopOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toStartOf="@+id/RightSideTerm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/LeftSideTerm"
            app:layout_constraintTop_toBottomOf="@+id/problemTag3"
            app:srcCompat="@drawable/unieqhdpi" />

        <View
            android:id="@+id/leftSideProblemTagDivider3"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomProblemTagDivider3"
            app:layout_constraintEnd_toStartOf="@+id/problemTag3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/RightSideProblemTagDivider"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/bottomProblemTagDivider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/problemTag3"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/bottomProblemTagDivider3"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSideProblemTagDivider3"
            app:layout_constraintTop_toBottomOf="@+id/problemTag3" />

        <TextView
            android:id="@+id/problemTag3"
            android:layout_width="200dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:text="@string/FutureState"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toStartOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftSideProblemTagDivider3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/problemTag3"
            app:layout_constraintEnd_toEndOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSideProblemTagDivider3" />

        <View
            android:id="@+id/bottomProblemTagDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSiderRuleInstanceTagDivider2" />

        <HorizontalScrollView
            android:id="@+id/TermSelectionDisplay"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:hapticFeedbackEnabled="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FunctionSymbolTag">

            <LinearLayout
                android:id="@+id/TermSelectionLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:hapticFeedbackEnabled="true"
                android:orientation="horizontal"
                android:paddingEnd="32dp" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/TermInstanceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="fill"
            android:isScrollContainer="true"
            android:keepScreenOn="true"
            app:layout_constraintBottom_toTopOf="@+id/FunctionSymbolTag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ruleInstanceTag2">

            <LinearLayout
                android:id="@+id/TermInstancceLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="8dp"
                android:minWidth="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TermDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:layoutDirection="inherit"
                    android:minWidth="75dp"
                    android:scrollbars="none"
                    android:text="@string/SelectedHole"
                    android:textColor="#000001"
                    android:textSize="36sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/divider10"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/FunctionSymbolTag"
            app:layout_constraintEnd_toEndOf="@+id/divider11"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/divider12" />

        <View
            android:id="@+id/divider11"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/divider13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/FunctionSymbolTag"
            app:layout_constraintTop_toTopOf="@+id/divider10" />

        <View
            android:id="@+id/divider12"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DAB0B0"
            app:layout_constraintBottom_toBottomOf="@+id/divider13"
            app:layout_constraintEnd_toStartOf="@+id/FunctionSymbolTag"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider10" />

        <View
            android:id="@+id/divider13"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/divider11"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/divider12"
            app:layout_constraintTop_toBottomOf="@+id/FunctionSymbolTag" />

        <TextView
            android:id="@+id/FunctionSymbolTag"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:text="@string/AllowedFunctionSymbolsTag"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/TermSelectionDisplay"
            app:layout_constraintEnd_toStartOf="@+id/divider11"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/divider12"
            app:layout_constraintTop_toBottomOf="@+id/TermInstanceDisplay" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/UndoButtonTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            android:scaleX=".6"
            android:scaleY=".6"
            app:layout_constraintBottom_toBottomOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2"
            app:srcCompat="@drawable/undoxhdpi" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"></com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_main_bar_layout">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ApplyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:scaleX=".6"
        android:scaleY=".6"
        app:layout_constraintBottom_toBottomOf="@+id/BottomRuleInstanceTagDivider"
        app:layout_constraintEnd_toStartOf="@+id/LeftSiderRuleInstanceTagDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RuleInstanceTag"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <View
        android:id="@+id/LeftSideProblemTagDivider"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toBottomOf="@+id/ProblemTag"
        app:layout_constraintEnd_toStartOf="@+id/ProblemTag"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ProblemTag" />

    <TextView
        android:id="@+id/ProblemTag"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="@string/UnifyTag"
        android:textColor="#000001"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/UnificationSymbol"
        app:layout_constraintEnd_toStartOf="@+id/RightSiderProblemTagDivider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/LeftSideProblemTagDivider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <View
        android:id="@+id/BottomProblemTagDivider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#DEAEAE"
        app:layout_constraintEnd_toEndOf="@+id/RightSiderProblemTagDivider"
        app:layout_constraintStart_toStartOf="@+id/LeftSideProblemTagDivider"
        app:layout_constraintTop_toBottomOf="@+id/ProblemTag" />

    <View
        android:id="@+id/RightSiderProblemTagDivider"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toBottomOf="@+id/ProblemTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ProblemTag"
        app:layout_constraintTop_toTopOf="@+id/ProblemTag"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:id="@+id/LeftSideTerm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/UnificationSymbol"
        app:layout_constraintEnd_toStartOf="@+id/UnificationSymbol"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/UnificationSymbol">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LeftSideProblem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:freezesText="true"
                android:gravity="center"
                android:minWidth="50dp"
                android:textColor="#000001"
                android:textSize="35sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/UnificationSymbol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleX="1.1"
        android:scaleY="1.1"
        app:layout_constraintBottom_toTopOf="@+id/RuleInstanceTag"
        app:layout_constraintEnd_toStartOf="@+id/RightSideTerm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/LeftSideTerm"
        app:layout_constraintTop_toBottomOf="@+id/ProblemTag"
        app:srcCompat="@drawable/unieqhdpi" />

    <HorizontalScrollView
        android:id="@+id/RightSideTerm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/UnificationSymbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/UnificationSymbol"
        app:layout_constraintTop_toTopOf="@+id/UnificationSymbol">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RightSideProblem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:autoText="false"
                android:editable="false"
                android:freezesText="true"
                android:gravity="center"
                android:minWidth="50dp"
                android:textColor="#000001"
                android:textSize="35sp"
                app:autoSizeMaxTextSize="60dp"
                app:autoSizeMinTextSize="60dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/LeftSiderRuleInstanceTagDivider"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toBottomOf="@+id/RuleInstanceTag"
        app:layout_constraintEnd_toStartOf="@+id/RuleInstanceTag"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RuleInstanceTag" />

    <View
        android:id="@+id/TopRuleInstanceTagDivider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/RuleInstanceTag"
        app:layout_constraintEnd_toEndOf="@+id/RightSiderRuleInstanceTagDivider"
        app:layout_constraintStart_toStartOf="@+id/LeftSiderRuleInstanceTagDivider" />

    <TextView
        android:id="@+id/RuleInstanceTag"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:text="@string/RuleAppliedTag"
        android:textColor="#000001"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/RuleInstanceScroll"
        app:layout_constraintEnd_toStartOf="@+id/RightSiderRuleInstanceTagDivider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/LeftSiderRuleInstanceTagDivider"
        app:layout_constraintTop_toBottomOf="@+id/UnificationSymbol" />

    <View
        android:id="@+id/RightSiderRuleInstanceTagDivider"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toBottomOf="@+id/RuleInstanceTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/RuleInstanceTag"
        app:layout_constraintTop_toTopOf="@+id/RuleInstanceTag" />

    <View
        android:id="@+id/BottomRuleInstanceTagDivider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#DEAEAE"
        app:layout_constraintEnd_toEndOf="@+id/RightSiderRuleInstanceTagDivider"
        app:layout_constraintStart_toStartOf="@+id/LeftSiderRuleInstanceTagDivider"
        app:layout_constraintTop_toBottomOf="@+id/RuleInstanceTag" />

    <HorizontalScrollView
        android:id="@+id/RuleInstanceScroll"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fadingEdge="none"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RuleInstanceTag">

        <LinearLayout
            android:id="@+id/RuleInstanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="75dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/InstanceOfRuleDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:gravity="center"
                android:minWidth="75dp"
                android:scrollbars="none"
                android:textColor="#000001"
                android:textSize="34sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/TopSubstitutionTagDivider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="@+id/RightSiderSubstitionTagDivider"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/LeftSideSubstitutionTagDivider" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="@string/SubstitutionTag"
        android:textColor="#232324"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/SelectedSubstitutionScroll"
        app:layout_constraintEnd_toStartOf="@+id/RightSiderSubstitionTagDivider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/LeftSideSubstitutionTagDivider"
        app:layout_constraintTop_toBottomOf="@+id/RuleInstanceScroll" />

    <View
        android:id="@+id/RightSiderSubstitionTagDivider"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <View
        android:id="@+id/LeftSideSubstitutionTagDivider"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toBottomOf="@+id/textView15"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <View
        android:id="@+id/BottomSubstitutionTagDivider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#DEAEAE"
        app:layout_constraintEnd_toEndOf="@+id/RightSiderSubstitionTagDivider"
        app:layout_constraintStart_toStartOf="@+id/LeftSideSubstitutionTagDivider"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="right"
        android:text="@string/RightBacket"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/SelectedSubstitutionScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/SelectedSubstitutionScroll"
        app:layout_constraintTop_toTopOf="@+id/SelectedSubstitutionScroll" />

    <HorizontalScrollView
        android:id="@+id/SelectedSubstitutionScroll"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:minWidth="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView16"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <LinearLayout
            android:id="@+id/SelectedSubstitutionLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="left"
        android:text="@string/LeftBrack"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/SelectedSubstitutionScroll"
        app:layout_constraintEnd_toStartOf="@+id/SelectedSubstitutionScroll"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SelectedSubstitutionScroll" />

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#DEAEAE"
        app:layout_constraintBottom_toTopOf="@+id/ProblemTag"
        app:layout_constraintEnd_toEndOf="@+id/RightSiderProblemTagDivider"
        app:layout_constraintStart_toStartOf="@+id/LeftSideProblemTagDivider" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/UndoButtonTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:scaleX=".6"
        android:scaleY=".6"
        app:layout_constraintBottom_toBottomOf="@+id/BottomRuleInstanceTagDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RightSiderRuleInstanceTagDivider"
        app:layout_constraintTop_toTopOf="@+id/TopRuleInstanceTagDivider"
        app:srcCompat="@drawable/undoxhdpi" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"></com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
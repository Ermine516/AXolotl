<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_main_bar_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/OuterLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="50dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/ProblemTag"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="#E05E8E"
            android:gravity="center"
            android:text="@string/ProblemTag"
            android:textColor="#FDFDFE"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/RightSideTerm"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="always"
            android:scrollIndicators="bottom|right"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarDefaultDelayBeforeFade="0"
            android:scrollbarFadeDuration="0"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/AxolotlHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ProblemTag">

            <LinearLayout
                android:id="@+id/RightSideTermLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="50dp"
                android:orientation="vertical" />
        </ScrollView>

        <ImageView
            android:id="@+id/AxolotlHorizontal"
            android:layout_width="0dp"
            android:layout_height="142dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/RuleListScroll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RightSideTerm"
            android:contentDescription="@string/axolotl_character_image"
            app:srcCompat="@drawable/axolotlhorizontal" />

        <ScrollView
            android:id="@+id/RuleListScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:overScrollMode="ifContentScrolls"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarDefaultDelayBeforeFade="0"
            android:scrollbarFadeDuration="250"
            app:layout_constrainedHeight="true"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AxolotlHorizontal">

            <LinearLayout
                android:id="@+id/RuleListVerticalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:maxWidth="200dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/navigationMenuColor"
            android:orientation="vertical"
            app:itemTextColor="@color/navigationMenuTextColor">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/menuimagebackground"
                android:padding="15dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:contentDescription="@string/axolotl_character_head"
                app:srcCompat="@drawable/axolotlhead" />

            <LinearLayout
                android:id="@+id/problembuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/problem_button_menu_symbol"
                    app:srcCompat="@drawable/unieqhdpi" />

                <TextView
                    android:id="@+id/Problembutton"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/problem"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp"
                    android:title="@string/problem" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/Proofbuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/proof_button_menu_symbol"
                    app:srcCompat="@drawable/proofxxxhdpi" />

                <TextView
                    android:id="@+id/ViewProof"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/view_proof"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp"
                    android:title="@string/view_proof" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/observeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/observeswitchformenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:theme="@style/MyCustomSwitchTheme" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="18dp"
                    android:paddingEnd="0dp"
                    android:text="@string/ObserveMode"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Adjusttextsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/Adjusttextseeker"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:max="50"
                    android:theme="@style/MyCustomSwitchTheme" />

                <TextView
                    android:id="@+id/textsize"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_size"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp"
                    android:title="@string/text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/TermMatchingbuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/proof_button_menu_symbol"
                    app:srcCompat="@drawable/termequalmenu" />

                <TextView
                    android:id="@+id/TermMatchingProblems"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/termmatchingmenu"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp"
                    android:title="@string/termmatchingmenu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/classicbuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/proof_button_menu_symbol"
                    app:srcCompat="@drawable/classical" />

                <TextView
                    android:id="@+id/PropositionalProblems"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/classical_logic"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp"
                    android:title="@string/classical_logic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nonclassicbuttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/proof_button_menu_symbol"
                    app:srcCompat="@drawable/nonclassic" />

                <TextView
                    android:id="@+id/nonclassical"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/non_classical_logic"
                    android:textColor="#FDFDFE"
                    android:textSize="14sp"
                    android:title="@string/non_classical_logic" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
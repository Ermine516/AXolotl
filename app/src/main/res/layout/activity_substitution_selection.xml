<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SubstitutionSelectionActivity"
    tools:showIn="@layout/app_sub_select_bar_layout">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SubstitutionSelectionActivity">

        <View
            android:id="@+id/rightSiderRuleInstanceTagDivider2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomRuleInstanceTagDivider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ruleInstanceTag2"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2" />

        <View
            android:id="@+id/leftSiderRuleInstanceTagDivider2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomRuleInstanceTagDivider2"
            app:layout_constraintEnd_toStartOf="@+id/ruleInstanceTag2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottomProblemTagDivider2" />

        <View
            android:id="@+id/bottomRuleInstanceTagDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSiderRuleInstanceTagDivider2"
            app:layout_constraintTop_toBottomOf="@+id/ruleInstanceTag2" />

        <TextView
            android:id="@+id/ruleInstanceTag2"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:text="@string/RuleAppliedTag"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/RuleInstanceScroll"
            app:layout_constraintEnd_toStartOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftSiderRuleInstanceTagDivider2"
            app:layout_constraintTop_toBottomOf="@+id/unificationSymbol3" />

        <HorizontalScrollView
            android:id="@+id/RightSideTerm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/unificationSymbol3"
            app:layout_constraintTop_toTopOf="@+id/unificationSymbol3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RightSideProblem"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:autoText="false"
                    android:editable="false"
                    android:freezesText="true"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:textColor="#000001"
                    android:textSize="35sp"
                    app:autoSizeMaxTextSize="60dp"
                    app:autoSizeMinTextSize="60dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/LeftSideTerm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toStartOf="@+id/unificationSymbol3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/unificationSymbol3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LeftSideProblem"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:freezesText="true"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:textColor="#000001"
                    android:textSize="35sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/unificationSymbol3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            app:layout_constraintBottom_toTopOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toStartOf="@+id/RightSideTerm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/LeftSideTerm"
            app:layout_constraintTop_toBottomOf="@+id/problemTag3"
            app:srcCompat="@drawable/unieqhdpi" />

        <View
            android:id="@+id/leftSideProblemTagDivider3"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/bottomProblemTagDivider3"
            app:layout_constraintEnd_toStartOf="@+id/problemTag3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/RightSideProblemTagDivider"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/bottomProblemTagDivider3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/problemTag3"
            app:layout_constraintTop_toTopOf="@+id/divider2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/bottomProblemTagDivider3"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSideProblemTagDivider3"
            app:layout_constraintTop_toBottomOf="@+id/problemTag3" />

        <TextView
            android:id="@+id/problemTag3"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:layout_marginTop="8dp"
            android:text="@string/UnifyTag"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/unificationSymbol3"
            app:layout_constraintEnd_toStartOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/leftSideProblemTagDivider3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/problemTag3"
            app:layout_constraintEnd_toEndOf="@+id/RightSideProblemTagDivider"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSideProblemTagDivider3" />

        <View
            android:id="@+id/bottomProblemTagDivider2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/ruleInstanceTag2"
            app:layout_constraintEnd_toEndOf="@+id/rightSiderRuleInstanceTagDivider2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/leftSiderRuleInstanceTagDivider2" />

        <HorizontalScrollView
            android:id="@+id/SubstitutionListScroll"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SubstitutionListTag">

            <LinearLayout
                android:id="@+id/SubstitutionListLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/RuleInstanceScroll"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/SubstitutionListTag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ruleInstanceTag2">

            <LinearLayout
                android:id="@+id/InstanceofRuleLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/InstanceOfRuleDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minWidth="75dp"
                    android:scrollbars="none"
                    android:textColor="#000001"
                    android:textSize="36sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/divider10"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toTopOf="@+id/SubstitutionListTag"
            app:layout_constraintEnd_toEndOf="@+id/divider11"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/divider12" />

        <View
            android:id="@+id/divider11"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DEAEAE"
            app:layout_constraintBottom_toBottomOf="@+id/divider13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/SubstitutionListTag"
            app:layout_constraintTop_toTopOf="@+id/divider10" />

        <View
            android:id="@+id/divider12"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#DAB0B0"
            app:layout_constraintBottom_toBottomOf="@+id/divider13"
            app:layout_constraintEnd_toStartOf="@+id/SubstitutionListTag"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider10" />

        <View
            android:id="@+id/divider13"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#DEAEAE"
            app:layout_constraintEnd_toEndOf="@+id/divider11"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/divider12"
            app:layout_constraintTop_toBottomOf="@+id/SubstitutionListTag" />

        <TextView
            android:id="@+id/SubstitutionListTag"
            android:layout_width="140dp"
            android:layout_height="22dp"
            android:text="@string/SubstitutionList"
            android:textColor="#000001"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/SubstitutionListScroll"
            app:layout_constraintEnd_toStartOf="@+id/divider11"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/divider12"
            app:layout_constraintTop_toBottomOf="@+id/RuleInstanceScroll" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>


